{
  "version": 1,
  "disable_existing_loggers": false,
  "formatters": {
    "simple": {
      "format": "%(levelname)-8s - %(message)s"
    },
    "standard": {
      "format": "%(asctime)s %(name)-12s %(levelname)-8s %(message)s"
    },
    "custom": {
      "()" : "robotpuzzle.log.CustomFormatter",
      "format" : "%(asctime)s - %(levelname)-8s - %(filename)-12s - %(funcName)s - %(message)s"
    },
    "custom_simple": {
      "()" : "robotpuzzle.log.CustomFormatter",
      "format" : "%(levelname)-8s %(funcName)-10s - %(message)s"
    }
  },
  "filters": {
    "warnings_and_below": {
      "()" : "robotpuzzle.log.filter_maker",
      "level": "WARNING"
    }
  },
  "handlers": {
    "stdout": {
      "class": "logging.StreamHandler",
      "level": "INFO",
      "formatter": "custom_simple",
      "stream": "ext://sys.stdout",
      "filters": ["warnings_and_below"]
    },
    "stderr": {
      "class": "logging.StreamHandler",
      "level": "ERROR",
      "formatter": "custom_simple",
      "stream": "ext://sys.stderr"
    },
    "file": {
      "class": "logging.FileHandler",
      "formatter": "custom",
      "filename": "/Users/martini/Development/PythonDev/RobotPuzzle/app.log",
      "mode": "a"
    }
  },
  "root": {
    "level": "DEBUG",
    "handlers": [
      "stderr",
      "stdout",
      "file"
    ]
  }
}
